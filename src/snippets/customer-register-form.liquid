{%- comment %}

  Customer Register Form
  ------------------------------------------------------------------------------

  Usage:

  {% include 'customer-register-form',
              marketing_checkbox_label: { string }
              terms_checkbox_label: { string }
              show_cancel_button: { boolean }
  %}

{% endcomment -%}

{% form 'create_customer' %}
  {{ form.errors | default_errors }}

  <div class="form-group">
    <input type="text"
      name="customer[first_name]"
      id="FirstName"
      class="form-control account-form__field"
      placeholder="{{ 'customer.register.first_name' | t }}"
      {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
      required>
  </div>

  <div class="form-group">
    <input type="text"
      name="customer[last_name]"
      id="LastName"
      class="form-control account-form__field"
      placeholder="{{ 'customer.register.last_name' | t }}"
      {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
      required>
  </div>

  <div class="form-group">
    <input type="email"
      name="customer[email]"
      id="Email"
      class="form-control account-form__field{% if form.errors contains 'email' %} is-invalid{% endif %}""
      value="{% if form.email %}{{ form.email }}{% endif %}"
      spellcheck="false"
      autocomplete="off"
      autocapitalize="off"
      placeholder="{{ 'customer.register.email' | t }}"
    >
  </div>

  <div class="form-group">
    <input type="password"
      name="customer[password]"
      id="CreatePassword"
      class="form-control account-form__field{% if form.errors contains 'password' %} is-invalid{% endif %}""
      placeholder="{{ 'customer.register.password' | t }}"
      data-password-field
      >
    <div class="text-center">
      <span class="form-password__condition">({{ 'customer.register.password_condition' | t }})</span>
    </div>
  </div>

  <div class="form-group">
    <input type="password"
      name="customer[password_confirmation]"
      id="CustomerPasswordConfirmation"
      class="form-control account-form__field"
      placeholder="{{ 'customer.register.password_confirm' | t }}"
      data-password-validate
    >
    <span data-password-validation-error-message class="form-password__error-message p4"></span>
    <div class="mt-1 custom-control custom-checkbox">
      <input class="custom-control-input" type="checkbox" name="customer[accepts_marketing]" value="true" id="AcceptsMarketing" checked>
      <label class="custom-control-label p4" for="AcceptsMarketing">
        {% if marketing_checkbox_label != blank %}
          {{ marketing_checkbox_label }}
        {% else %}
          {{ 'customer.register.news_checkbox' | t }}
        {% endif %}
      </label>
    </div>
  </div>

  <div class="form-group form-group__button text-center">
    <div class="mb-2">
      <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn btn-primary">
    </div>
  </div>

  <div class="form-group">
    {% if show_cancel_button %}
    <div class="mb-3 p5 text-center">Already have an account? <a data-hide-register-form href="/account/login">Sign In</a></div>
    {% endif %}
    <div class="p5 text-center">By creating an account you agree with our <br> <a href="/pages/terms-of-service">Terms of Service</a> and <a href="/pages/privacy-policy">Privacy Policy</a></div>
  </div>

{% endform %}
