{% assign metafields = product.metafields.custom_fields %}
<div class="drawer drawer--right fit-guide__drawer" data-fit-guide-drawer>
  <div class="drawer__inner fit-guide__inner">
    <div class="drawer__header fit-guide__header">
      <a href="javascript:void(0);"class="fit-guide__close" data-drawer-close>
        {% include 'icon-close' %}
        <span class="sr-only">Close fit guide</span>
      </a>
      <div class="fit-guide__header-title">
        Find My Fit
      </div>
    </div>
    <div class="drawer__body-contents fit-guide__body">
      {% if metafields["fg_images"] != blank %}
        <div class="fit-guide__gallery-container" data-fit-guide-slider>
          <div class="swiper swiper-container" data-fit-guide-gallery>
            <div class="fit-guide__gallery-pagination-container">
              <div class="fit-guide__gallery-pagination-fraction">
                <span data-fit-guide-gallery-current-index>1</span> / {{ metafields["fg_images"].size }}
              </div>
              <div class="fit-guide__gallery-pagination"></div>
            </div>
            <div class="swiper-wrapper">
              {% for image in metafields["fg_images"] %}
              <div class="swiper-slide">
                {% capture image_tag %}
                  {% include 'cf-image' with image: image, print: "tag", size: "599x599", crop: "center", tag_class: "swiper-lazy fit-guide__gallery-image"%}
                {% endcapture %}
                {{ image_tag | replace: 'src=', 'data-src=' }}
              </div>
              {% endfor %}
            </div>
          </div>
          <div class="fit-guide__gallery-description-content">
            {% if metafields["fg_model_height"] != blank %}
              <div class="fit-guide__gallery-description-item text-center">
                <span class="fit-guide__gallery-description-value">{{metafields["fg_model_height"]}}</span>
                <b class="fit-guide__gallery-description-title">Height</b>
              </div>
            {% endif %}
            {% if metafields["fg_model_chest"] != blank %}
              <div class="fit-guide__gallery-description-item text-center">
                <span class="fit-guide__gallery-description-value">{{metafields["fg_model_chest"]}}</span>
                <b class="fit-guide__gallery-description-title">Chest</b>
              </div>
            {% endif %}
            {% if metafields["fg_model_waist"] != blank %}
              <div class="fit-guide__gallery-description-item text-center">
                <span class="fit-guide__gallery-description-value">{{metafields["fg_model_waist"]}}</span>
                <b class="fit-guide__gallery-description-title">Waist</b>
              </div>
            {% endif %}
            {% if metafields["fg_model_size"] != blank %}
              <div class="fit-guide__gallery-description-item text-center">
                <span class="fit-guide__gallery-description-value">{{metafields["fg_model_size"]}}</span>
                <b class="fit-guide__gallery-description-title">Size</b>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
      <span class="h6 fit-guide__subtitle">
        {{ metafields["fg_table_subtitle"] | default: product.title }}
      </span>
      {% if metafields["fg_table_title"] != blank %}
        <h4 class="h2 fit-guide__title">
          {{ metafields["fg_table_title"]}}
        </h4>
      {% endif %}
      {% if metafields["fg_size_list"] != blank %}
        <table class="fit-guide__table responsible-table table-striped">
          <thead>
            <th></th>
            <th><b>Chest</b></th>
            <th><b>Waist</b></th>
            <th><b>Height</b></th>
          </thead>
          <tbody>
            {% for table_row in metafields["fg_size_list"] %}
              <tr>
                <td> {{table_row["name"]}} </td>
                <td> {{table_row["chest_size"]}} </td>
                <td> {{table_row["waist_size"]}} </td>
                <td> {{table_row["height_size"]}} </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% endif %}

      {% if metafields["fg_tips_content"] != blank %}
        <div class="fit-guide__tips">
          {% if metafields["fg_tips_title"] != blank %}
            <h6 class="fit-guide__tips-title">
              {{ metafields["fg_tips_title"] }}
            </h6>
          {% endif %}

          <div class="fit-guide__tips-content">
            {{ metafields["fg_tips_content"] }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>