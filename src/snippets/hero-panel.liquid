<div id="hero-{{id}}" class="hero container-fluid {{s.vertical_position}} {{s.horizontal_position}} {{s.horizontal_position_m}} {{s.vertical_position_m}}" data-section-id="{{section.id}}" data-section-type="hero">
  <style>
    #hero-{{id}} .hero__text,
    #hero-{{id}} .hero__title {
      color: {{s.text_color}};
    }

    #hero-{{id}} .hero__highlight-text {
      color: {{ s.highlight_color }};
    }

    @media (max-width: 992px) {
      #hero-{{id}} .hero__text,
      #hero-{{id}} .hero__title {
        color: {{s.text_color_m}};
      }

      #hero-{{id}} .hero__highlight-text {
        color: {{ s.highlight_color_m }};
      }
    }
  </style>
  {% unless s.image_mobile == blank and s.image == blank %}
    <picture class="hero__bg">
      {% assign mobile_image = s.image_mobile | default: s.image %}
      {% assign mobile_image_title = mobile_image | replace:'files/', '' %}
      {% assign desktop_image_title = s.image | replace: 'files/', '' %}
      <source data-srcset="{{ s.image | img_url: 'master' }}" media="(min-width: 992px)">
      <img src="{{ mobile_image | default: s.image | img_url: 'master' }}" alt="{{ s.image.alt | default: s.mobile_image.alt }}" class="hero__bg-image lazyload" loading="lazy" width="1920" height="1080">
    </picture>
  {% endunless %}


  {% if s.desktop_video_webm != blank or s.desktop_video_mp4 != blank or s.mobile_video_webm != blank or s.mobile_video_mp4 != blank %}
    <div class="hero__video-container">
      <video
        data-background-video
        data-desktop-video-webm="{{s.desktop_video_webm}}"
        data-desktop-video-mp4="{{s.desktop_video_mp4}}"
        data-mobile-video-webm="{{s.mobile_video_webm}}"
        data-mobile-video-mp4="{{s.mobile_video_mp4}}"
        autoplay
        loop
        muted
        playsinline
      >
        <source type="video/webm" src="{{s.desktop_video_webm}}" data-webm-video>
        <source type="video/mp4" src="{{s.desktop_video_mp4}}" data-mp4-video>
      </video>
    </div>
  {% endif %}

  <div class="hero__inner col-20 col-lg-14">
    {% if s.handwritten_image != blank %}
      <img data-src="{{s.handwritten_image | img_url: 'master'}}" alt="{{s.handwritten_image.alt}}" class="hero__title-image lazyload">
    {% endif %}
    {% if s.title != blank %}
      <{{s.title_tag}} class="hero__title h1">
        {{ s.title | replace: '<strong>', '<span class="hero__highlight-text">' | replace: '</strong>', '</span>' | remove: '<p>' | remove: '</p>'}}
      </{{s.title_tag}}>
    {% endif %}
    {% if s.body_content != blank %}
      <p class="hero__text p2">
        {{ s.body_content }}
      </p>
    {% endif %}
    {% if s.cta_text != blank and s.cta_url != blank%}
    <div>
      <a href="{{s.cta_url}}" class="btn {{ s.button_style }} {{ s.button_style_m }} hero__btn">
        {{ s.cta_text }}
      </a>
    </div>
    {% endif %}
  </div>
</div>