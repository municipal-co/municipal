{% unless show_collection_colors == false %}
  {% if product.meta_fields.custom_fields['color_descriptor'] != blank %}
    {{ product.meta_fields.custom_fields['color_descriptor'] }}
  {% elsif current_color != blank %}
    {{ current_color }}
  {% else %}
    {% if product != blank %}
      {% for option in product.options_with_values %}
        {% assign option_name_downcase = option.name | downcase %}
        {% if option_name_downcase == 'color' %}
          {% assign values_quantity = option.values | size %}
            {{ values_quantity }} {{ values_quantity | pluralize: 'Color', 'Colors' }}
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endif %}
{% endunless %}

