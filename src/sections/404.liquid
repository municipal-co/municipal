<div class="layout-content-wrapper" data-section-id="{{ section.id }}" data-section-type="fourofour">
  <div class="four04">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="four04__content col-xl-14 col-lg-14 col-md-20 col-sm-20 col-20">

          {% if section.settings.title != blank %}
            <h1 class="four04__title">
              {{ section.settings.title }}
            </h1>
          {% endif %}

          {% if section.settings.content != blank %}
            <div class="four04__admin-subtitle">{{ section.settings.content }}
            </div>
          {% endif %}

          <div class="four04__search-section">
            <form action="/pages/search-results" method="get" role="search" data-search-form>
              <div class="form-group">
                {% include 'icon-search' %}
                <input type="text" name="Q" placeholder="{{ 'general.search.placeholder' | t }}" class="four04__search-input" autocomplete="off" value="{{ search.terms }}" data-search-input>

                <button type="submit" class="four04__search-submit">
                  {% include 'icon-arrow' %}
                  <span class="icon-fallback-text">{{ 'general.search.submit' | t }}
                  </span>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {%- render 'responsive-image' with
      class: 'four04__bg-image'
      image: section.settings.background-image,
      image_sizes: '100vw',
      loading: 'lazy',
      image_alt: {{ section.settings.background-image.alt }}
    -%}
  </div>
</div>

{% schema %}
  {
    "name": "404 Page",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "404 page title"
      }, {
        "id": "content",
        "type": "richtext",
        "label": "Content"
      }, {
        "type": "image_picker",
        "id": "background-image",
        "label": "Background image"
      }
    ]
  }
{% endschema %}
