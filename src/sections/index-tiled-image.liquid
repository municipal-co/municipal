{% include 'tiled-image'
            ti_id: section.id,
            ti_background_color: section.settings.background_color,
            ti_light_text: section.settings.light_text,
            ti_title_color: section.settings.title_color,
            ti_eyebrow: section.settings.eyebrow,
            ti_title: section.settings.title,
            ti_text: section.settings.text,
            ti_cta_text: section.settings.cta_text,
            ti_cta_url: section.settings.cta_url,
            ti_left_image: section.settings.left_image,
            ti_right_image: section.settings.right_image,
            ti_eyebrow_icon: section.settings.eyebrow_icon
%}

{% schema %}
  {
    "name": "tiled-image",
    "class": "tiled-image container-fluid",
    "settings":[
      {
        "type": "header",
        "content": "Design"
      },
      {
        "type": "select",
        "id": "background_color",
        "label": "Background Color",
        "options": [
          {"label": "Primary-White", "value":"#ffffff"},
          {"label": "Primary-Black", "value":"#121212"},
          {"label": "Utility-Charcoal", "value": "#424446"},
          {"label": "Utility-Army", "value": "#4A5D36"},
          {"label": "Utility-OffWhite", "value": "#F1F1F1"},
          {"label": "Utility-TealBlue", "value": "#2c6275"},
          {"label": "Utility-khaki", "value": "#C0B095"},
          {"label": "Utility-Crimson", "value": "#452b2b"},
          {"label": "Sport-Orange", "value":"#ff2b00"},
          {"label": "Sport-Green", "value": "#CCFF00"},
          {"label": "Sport-Blue", "value":"#009dcc"}
        ],
        "default": "#C0B095"
      },
      {
        "type": "checkbox",
        "id": "light_text",
        "label": "Light Text",
        "info": "Light text affects the eyebrow, copy and CTA."
      },
      {
        "type": "select",
        "id": "title_color",
        "label": "Header Color",
        "options": [
          {"label":"Primary-White", "value":"white"},
          {"label":"Primary-Black", "value":"black"},
          {"label":"Sport-Orange", "value":"red"},
          {"label":"Sport-Green", "value":"yellow"},
          {"label":"Sport-Blue", "value":"cyan"}
        ]
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "eyebrow",
        "label": "Eyebrow"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA Link"
      },
      {
        "type": "header",
        "content": "Images"
      },
      {
        "type": "image_picker",
        "id": "left_image",
        "label": "Left Image"
      },
      {
        "type": "image_picker",
        "id": "right_image",
        "label": "Right Image"
      },
      {
        "type": "image_picker",
        "id": "eyebrow_icon",
        "label": "Eyebrow Icon"
      }
    ],
    "presets": [
      {
        "name": "Tiled Image",
        "category": "Media"
      }
    ]
  }
{% endschema %}