<div data-section-id="{{ section.id }}">

  {% include 'promo',
              p_id: section.id,
              p_layout: section.settings.layout,
              p_type: 3,
              p_bg_color: section.settings.background_color
              p_image: section.settings.image,
              p_image_small: section.settings.image_small,
              p_background_color: section.settings.background_color,
              p_title_color: section.settings.title_color,
              p_light: section.settings.light_text,
              p_eyebrow_icon: section.settings.eyebrow_icon,
              p_secondary_icon: section.settings.secondary_icon,
              p_eyebrow: section.settings.eyebrow,
              p_title: section.settings.title,
              p_text: section.settings.text,
              p_cta_url: section.settings.cta_url,
              p_cta_text: section.settings.cta_text
  %}
</div>

{% schema %}
  {
    "name": "Promo",
    "class": "promo-section",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },   
      {
        "type": "text",
        "id": "eyebrow",
        "label": "Eyebrow"
      },
      {
        "type": "image_picker",
        "id": "eyebrow_icon",
        "label": "Eyebrow Icon"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA Link"
      },  
      {
        "type": "image_picker",
        "id": "secondary_icon",
        "label": "Secondary Icon"
      },    
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_small",
        "label": "Image - Mobile"
      },
      {
        "type": "header",
        "content": "Content - Options"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          { "value": "left", "label": "Image Left" },
          { "value": "right", "label": "Image Right" }
        ],
        "default": "left"
      },
      {
        "type": "checkbox",
        "id": "light_text",
        "label": "Ligh Text",
        "info": "Light text affects the eyebrow, copy and CTA."
      },
      {
        "type": "select",
        "id": "title_color",
        "label": "Title Color",
        "options": [
          {"label":"White", "value":"white"},
          {"label":"Red", "value":"red"},
          {"label":"Cyan", "value":"cyan"},
          {"label":"Black", "value":"black"}
        ],
        "default": "white"
      },
      {
        "type": "select",
        "id": "background_color",
        "label": "Background Color",
        "options": [
          {"label":"White", "value":"#ffffff"},
          {"label":"Red", "value":"#ff2b00"},
          {"label":"Cyan", "value":"#009dcc"},
          {"label":"Black", "value":"#121212"},
          {"label": "Brown", "value": "#452b2b"},
          {"label": "Blue", "value": "#2c6275"},
          {"label": "Tan", "value": "#c3baa8"},
          {"label": "Gray", "value": "#424446"},
          {"label": "Brownish-Red", "value": "#752c2e"}
        ],
        "default": "#ffffff"
      }
    ],
    "presets": [
      {
        "name": "Promo",
        "category": "Media",
        "settings": {
          "title": "Promo Title",
          "text": "<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.<\/p>"
        }
      }
    ]    
  }
{% endschema %}
