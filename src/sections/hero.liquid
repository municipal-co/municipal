{% include 'hero'
  id: section.id,
  s: section.settings,
  classes: 'hero--v2'
%}

{% schema %}
  {
    "name": "hero",
    "settings":[
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "select",
        "id": "title_tag",
        "label": "Module Title Tag",
        "options": [
          {
            "value": "h1",
            "label": "h1"
          },
          {
            "value": "h2",
            "label": "h2"
          },
          {
            "value": "h3",
            "label": "h3"
          },
          {
            "value": "h4",
            "label": "h4"
          },
          {
            "value": "h5",
            "label": "h5"
          },
          {
            "value": "h6",
            "label": "h6"
          }
        ],
        "default": "h2"
      },
      {
        "type": "image_picker",
        "id": "handwritten_image",
        "label": "Handwritten image",
        "info": "Image placed on top of the hero title"
      },
      {
        "type": "richtext",
        "id": "title",
        "label": "Title",
        "info": "Use Bold to create a color highlight on the text"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color Desktop",
        "default": "#000000",
        "info": "Default color of the body content text"
      },
      {
        "type": "color",
        "id": "highlight_color",
        "label": "Highlight Color Desktop",
        "default": "#FF00FF",
        "info": "Color for the highlighted text on the title of the module"
      },
      {
        "type": "color",
        "id": "text_color_m",
        "label": "Text Color Mobile",
        "default": "#000000",
        "info": "Default color of the body content text"
      },
      {
        "type": "color",
        "id": "highlight_color_m",
        "label": "Highlight Color Mobile",
        "default": "#FF00FF",
        "info": "Color for the highlighted text on the title of the module"
      },
      {
        "type": "textarea",
        "id": "body_content",
        "label": "Body content"
      },
      {
      "type": "header",
      "content": "CTA Button"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA Link"
      },
      {
        "type": "color",
        "id": "cta_bg_color",
        "label": "Background Color",
        "default": "#121212"
      },
      {
        "type": "color",
        "id": "cta_text_color",
        "label": "Text Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "cta_border_color",
        "label": "Border Color",
        "default": "#FFFFFF"
      },
      {
        "type": "header",
        "content": "CTA Button 2"
      },
      {
        "type": "text",
        "id": "cta_text_2",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url_2",
        "label": "CTA Link"
      },
      {
        "type": "color",
        "id": "cta_bg_color_2",
        "label": "Background Color",
        "default": "#121212"
      },
      {
        "type": "color",
        "id": "cta_text_color_2",
        "label": "Text Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "cta_border_color_2",
        "label": "Border Color",
        "default": "#FFFFFF"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "vertical_position",
        "label": "Text Vertical Position Desktop",
        "options": [
          {
            "value": "hero--vertical-top",
            "label": "Top"
          },
          {
            "value": "hero--vertical-center",
            "label": "Center"
          },
          {
            "value": "hero--vertical-bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "select",
        "id": "horizontal_position",
        "label": "Text Horizontal Position Desktop",
        "options": [
          {
            "value": "hero--horizontal-left",
            "label": "Left"
          },
          {
            "value": "hero--horizontal-center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "select",
        "id": "vertical_position_m",
        "label": "Text Vertical Position Mobile",
        "options": [
          {
            "value": "hero--vertical-top-m",
            "label": "Top"
          },
          {
            "value": "hero--vertical-center-m",
            "label": "Center"
          },
          {
            "value": "hero--vertical-bottom-m",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "select",
        "id": "horizontal_position_m",
        "label": "Text Horizontal Position Mobile",
        "options": [
          {
            "value": "hero--horizontal-left-m",
            "label": "Left"
          },
          {
            "value": "hero--horizontal-center-m",
            "label": "Center"
          }
        ]
      },
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "checkbox",
        "id": "enable_overlay",
        "label": "Enable Overlay",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Desktop Image",
        "info": "Recommended Size: 1440w x 660h"
      },
      {
        "type": "text",
        "id": "desktop_video_mp4",
        "label": "Desktop Video (MP4)",
        "info": "Replaces desktop background image for a video, aspect ratio required 16x9"
      },
      {
        "type": "text",
        "id": "desktop_video_webm",
        "label": "Desktop Video (WEBM)",
        "info": "Replaces desktop background image for a video, aspect ratio required 16x9"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image",
        "info": "Recommended Size: 485w x 437h"
      },
      {
        "type": "text",
        "id": "mobile_video_mp4",
        "label": "Mobile Video (MP4)",
        "info": "Replaces mobile image for a looping video"
      },
      {
        "type": "text",
        "id": "mobile_video_webm",
        "label": "Mobile Video (WEBM)",
        "info": "Replaces mobile image for a looping video"
      },
      {
        "type": "header",
        "content": "Marketing drawer"
      },
      {
        "type": "checkbox",
        "id": "enable_coming_soon",
        "label": "Enable Coming Soon",
        "default": false,
        "info": "When enabled replaces the two CTAs populated above in favor of this one that will trigger the marketing drawer"
      },
      {
        "type" : "text",
        "id": "coming_soon_cta_label",
        "label": "CTA Label"
      },
      {
        "type": "color",
        "id": "coming_soon_cta_bg_color",
        "label": "Background Color",
        "default": "#121212"
      },
      {
        "type": "color",
        "id": "coming_soon_cta_text_color",
        "label": "Text Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "coming_soon_cta_border_color",
        "label": "Border Color",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "coming_soon_product_title",
        "label": "Product Title",
        "info": "Title of the product that is coming soon, this is used to add to the customers klaviyo profile when they sign up for the coming soon notification."
      },
      {
        "type": "image_picker",
        "id": "coming_soon_product_image",
        "label": "Product Image",
        "info": "Image of the product to be displayed on the coming soon drawer"
      }
    ],
    "presets": [
      {
        "name": "V2 - Hero",
        "category": "Layout"
      }
    ]
  }
{% endschema %}
