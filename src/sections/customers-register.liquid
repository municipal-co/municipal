<div class="account__layout" data-section-id="{{ section.id }}" data-section-type="customers-register" style="background-image: url({{ settings.account_form_bg | image_url: width:'1920' }}); background-color: {{ settings.account_pages_bg_color }};">
  <div class="container">
    <div class="row justify-content-center">
      <div class="account__info-container">
        <h1 class="account__header">{{ 'customer.register.title' | t | newline_to_br }}</h1>
        <div class="account__description">{{ 'customer.register.subtitle' | t }}</div>
        {% include 'customer-register-form',
                    marketing_checkbox_label: section.settings.confirmation_marketing,
                    terms_checkbox_label: section.settings.confirmation_terms,
                    show_cancel_button: true
        %}
      </div>
    </div>
  </div>
</div>
