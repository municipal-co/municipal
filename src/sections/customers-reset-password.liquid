{% assign subtitle = 'customer.reset_password.subtext' | t: email: email %}

<div class="account__layout" data-section-id="{{ section.id }}" data-section-type="customers-reset-password" style="background-image: url({{ settings.account_form_bg | image_url: width:'1920' }}); background-color: {{ settings.account_pages_bg_color }};">
  <div class="container">
    <div class="row justify-content-center">
      <div class="account__info-container">
        <h1 class="account__header">{{ 'customer.reset_password.title' | t | newline_to_br }}</h1>
        {% form 'reset_customer_password', id: "reset-password" %}

          <div class="mb-2 form-group">
            <input type="password"
              name="customer[password]"
              id="ResetPassword"
              class="form-control account-form__field{% if form.errors contains 'password' %} is-invalid{% endif %}"
              placeholder="{{ 'customer.reset_password.password' | t }}"
              data-password-field
            >
          </div>

          <div class="form-group">
            <input type="password"
              name="customer[password_confirmation]"
              id="PasswordConfirmation"
              class="form-control account-form__field{% if form.errors contains 'password_confirmation' %} is-invalid{% endif %}"
              placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
              data-password-validate
            >
            <span data-password-validation-error-message class="form-password__error-message show">
              {{ 'customer.register.password_condition' | t }}
            </span>
          </div>

          <input type="submit" class="btn btn-primary" value="{{ 'customer.reset_password.submit' | t }}">
        {% endform %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Customers - Reset Pass",
    "settings": []
  }
{% endschema %}
