{% assign page_hero_id = 'page-hero-' | append: section.id %}
{% assign title = 'customer.reset_password.title' | t %}
{% assign subtitle = 'customer.reset_password.subtext' | t: email: email %}

<div class="layout-content-wrapper" data-section-id="{{ section.id }}" data-section-type="customers-reset-password">
  <div class="container">
    
    {% include 'page-hero',
                ph_id: page_hero_id,
                ph_title: title,
                ph_subtitle: subtitle
    %}

    <div class="row justify-content-center">

      <div class="col-sm-12">
        {% form 'reset_customer_password', id: "reset-password" %}
          {{ form.errors | default_errors }}

          <div class="form-group">
            <input type="password"
              name="customer[password]"
              id="ResetPassword"
              class="form-control account-form__field{% if form.errors contains 'password' %} is-invalid{% endif %}"
              placeholder="{{ 'customer.reset_password.password' | t }}"
              data-password-field
            >
            <span class="form-password__condition">({{ 'customer.register.password_condition' | t }})</span>
          </div>

          <div class="form-group">
            <input type="password"
              name="customer[password_confirmation]"
              id="PasswordConfirmation"
              class="form-control account-form__field{% if form.errors contains 'password_confirmation' %} is-invalid{% endif %}"
              placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
              data-password-validate
            >
            <span data-password-validation-error-message class="form-password__error-message"></span>
          </div>

          <div class="form-group">
            <input type="submit" class="btn btn-primary" value="{{ 'customer.reset_password.submit' | t }}">
          </div>

        {% endform %}
      </div>

    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Customers - Reset Pass",
    "settings": []
  }
{% endschema %}
