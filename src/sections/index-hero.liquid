
{% include 'hero-panel'
  h_id: section.id,
  h_background_color: section.settings.background_color,
  h_handwritten_text_image: section.settings.handwritten_text_image,
  h_title: section.settings.title,
  h_title_tag: section.settings.title_tag,
  h_title_color: section.settings.title_color,
  h_image: section.settings.image,
  h_mobile_image: section.settings.image_mobile,
  h_video: section.settings.video_url,
  h_cta_text: section.settings.cta_text,
  h_cta_url: section.settings.cta_url,
  h_content_position: section.settings.content_position
 %}

{% schema %}
  {
    "name": "hero",
    "class": "hero container-fluid",
    "settings":[
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "select",
        "id": "title_tag",
        "label": "Module Title Tag",
        "options": [
          {
            "value": "h1",
            "label": "h1"
          },
          {
            "value": "h2",
            "label": "h2"
          },
          {
            "value": "h3",
            "label": "h3"
          },
          {
            "value": "h4",
            "label": "h4"
          },
          {
            "value": "h5",
            "label": "h5"
          },
          {
            "value": "h6",
            "label": "h6"
          }
        ],
        "default": "h2"
      },
      {
        "type": "select",
        "id": "background_color",
        "label": "Background Color",
        "options": [
          {"label": "Primary-White", "value": "#ffffff"},
          {"label": "Primary-Black", "value": "#121212"},
          {"label": "Utility-Charcoal", "value": "#424446"},
          {"label": "Utility-Army", "value": "#2D402A"},
          {"label": "Utility-OffWhite", "value": "#F1F1F1"},
          {"label": "Utility-TealBlue", "value": "#2c6275"},
          {"label": "Utility-khaki", "value": "#C0B095"},
          {"label": "Utility-Blush", "value": "#DFBFC0"},
          {"label": "Utility-Crimson", "value": "#3F2727"},
          {"label": "Utility-Navy", "value": "#0A3055"},
          {"label": "Utility-Tan", "value": "#B9B093"},
          {"label": "Sport-Magenta", "value": "#FF00FF"},
          {"label": "Sport-Orange", "value": "#FF4500"},
          {"label": "Sport-Yellow", "value": "#FFEA06"},
          {"label": "Sport-Green", "value": "#BEFF00"},
          {"label": "Sport-Blue", "value": "#0036EB"},
          {"label": "Core-Grey-1", "value": "#f1f1f1"},
          {"label": "Core-Grey-2", "value": "#B1B7C2"},
          {"label": "Core-Grey-3", "value": "#393D49"}
        ]
      },
      {
        "type": "image_picker",
        "id": "handwritten_text_image",
        "label": "Handwritten text image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "select",
        "id": "title_color",
        "label": "Header Color",
        "options": [
          {"label":"Primary-White", "value":"white"},
          {"label":"Primary-Black", "value":"black"},
          {"label":"Sport-Orange", "value":"red"},
          {"label":"Sport-Green", "value":"yellow"},
          {"label":"Sport-Blue", "value":"cyan"}
        ]
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA Link"
      },
      {
        "type": "header",
        "content": "Design"
      },
      {
        "type": "select",
        "id": "content_position",
        "label": "Image Position",
        "options": [
          {"label": "Image Above Content", "value":"true"},
          {"label": "Image Below Content", "value":"false"}
        ]
      },
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Main Image",
        "info": "Recommended Size: 1440w x 810h (double for retina)"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image",
        "info": "Recommended Size: 485w x 437h (double for retina)"
      },
      {
        "type": "header",
        "content": "Video"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video Url",
        "accept": ["youtube"]
      }
    ],
    "presets": [
      {
        "name": "Hero",
        "category": "Media",
        "settings": {
          "title": "Banner Text Here"
        }
      }
    ]
  }
{% endschema %}
