
{% include 'hero-panel'
  id: section.id,
  s: section.settings
%}

{% schema %}
  {
    "name": "hero",
    "settings":[
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "select",
        "id": "title_tag",
        "label": "Module Title Tag",
        "options": [
          {
            "value": "h1",
            "label": "h1"
          },
          {
            "value": "h2",
            "label": "h2"
          },
          {
            "value": "h3",
            "label": "h3"
          },
          {
            "value": "h4",
            "label": "h4"
          },
          {
            "value": "h5",
            "label": "h5"
          },
          {
            "value": "h6",
            "label": "h6"
          }
        ],
        "default": "h2"
      },
      {
        "type": "richtext",
        "id": "title",
        "label": "Title",
        "info": "Use Bold to create a color highlight on the text"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#000000",
        "info": "Default color of the body content text"
      },
      {
        "type": "color",
        "id": "highlight_color",
        "label": "Highlight Color",
        "default": "#FF00FF",
        "info": "Color for the highlighted text on the title of the module"
      },
      {
        "type": "textarea",
        "id": "body_content",
        "label": "Body content"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA Link"
      },
     {
       "type": "select",
       "id": "button_style",
       "label": "Button Style",
       "options": [
         {
           "value": "btn-primary",
           "label": "Black"
         },
        {
          "value": "btn-secondary",
          "label": "Blue"
        },
        {
          "value": "btn-white",
          "label": "White"
        }
       ]
     },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "vertical_position",
        "label": "Text Vertical Position",
        "options": [
          {
            "value": "hero--vertical-top",
            "label": "Top"
          },
          {
            "value": "hero--vertical-center",
            "label": "Center"
          },
          {
            "value": "hero--vertical-bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "select",
        "id": "horizontal_position",
        "label": "Text Horizontal Position",
        "options": [
          {
            "value": "hero--horizontal-left",
            "label": "Left"
          },
          {
            "value": "hero--horizontal-center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Desktop Image",
        "info": "Recommended Size: 1440w x 660h"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image",
        "info": "Recommended Size: 485w x 437h"
      }
    ],
    "presets": [
      {
        "name": "Hero",
        "category": "Layout"
      }
    ]
  }
{% endschema %}
