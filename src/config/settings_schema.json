        "type": "product",
        "id": "gift_product",
        "label": "Gift Product",
        "info": "Product that needs to be added to the cart once the user reaches the threshold"
      },
      {
        "type": "range",
        "id": "gift_threshold",
        "label": "Gift threshold",
        "unit": "$",
        "default": 5,
        "step": 5,
        "min": 0,
        "max": 500,
        "info": "Order value that needs to be achieved to add the free gift to the cart"
      },
      {
        "type": "text",
        "label": "Gift product messaging",
        "id": "gift_notification_message",
        "default": "Free gift with [threshold] purchase",
        "info": "Use [threshold] to place the money value of the threshold anywhere on the phrase"
      }
    ]
